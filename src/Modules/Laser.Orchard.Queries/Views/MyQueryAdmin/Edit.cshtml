@{ 
    Layout.Title = T("Edit HQL Query").Text;
    Script.Require("jQuery");
}

@using (Html.BeginFormAntiForgeryPost()) {
    @Display.TokenHint()
    @Display(Model)
}
<script type="text/javascript">
    $(function () {
        $("textarea[name='MyCustomQueryPart.QueryString.Text']").addClass("tokenized").attr('rows', '10');
        $("textarea[name='MyCustomQueryPart.QueryParameterValues.Text']").addClass("tokenized").attr('rows', '5');
})
</script>