@model Laser.Orchard.RazorScripting.Settings.RazorValidationPartSettings

@Display.TokenHint()

<fieldset>
    <label for="@Html.FieldIdFor(m => m.Script)">@T("Script")</label>
    <div>
        @Html.TextAreaFor(m => m.Script, new { @class = "text medium", rows = "5" })
        <span class="hint">@T("The script to run everytime the content item is edited. You can use Model.ContentItem, Model.OrchardServices, Model.T(), Model.Tokens. If the script returns a NOT empty string, the part assumes that the content is in error.")</span>
    </div>
</fieldset>